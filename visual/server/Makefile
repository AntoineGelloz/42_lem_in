################################################################################
################################                ################################
################################ MAIN VARIABLES ################################
################################                ################################
################################################################################

# Name
NAME = server

# Compiler
CC = clang

# Compiler Flags
CFLAGS += -Wall
CFLAGS += -Wextra

################################################################################
################################                ################################
################################   PRINT VAR    ################################
################################                ################################
################################################################################

# Reset
NC = \033[0m

# Regular Colors
BLACK = \033[0;30m
RED = \033[0;31m
GREEN = \033[32m
YELLOW = \033[0;33m
BLUE = \033[0;34m
PURPLE = \033[0;35m
CYAN = \033[0;36m
WHITE = \033[0;37m

# One Line Output
ONELINE =\e[1A\r

################################################################################
#################################               ################################
#################################    SOURCES    ################################
#################################               ################################
################################################################################

SRCS = server.c

################################################################################
#################################               ################################
#################################    OBJECTS    ################################
#################################               ################################
################################################################################

PATH_OBJS = obj/
OBJS = $(patsubst %.c, $(PATH_OBJS)%.o, $(SRCS))

################################################################################
#################################               ################################
#################################     RULES     ################################
#################################               ################################
################################################################################

#---------------------------------- STANDARD ----------------------------------#

all: $(PATH_OBJS) $(NAME)

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $@
	printf "$(GREEN)$@ is ready.\n$(NC)"

$(OBJS): $(PATH_OBJS)%.o: %.c Makefile
	$(CC) $(CFLAGS) -c $< -o $@
	printf "$(CYAN)compiling $<\n"

$(PATH_OBJS):
	mkdir $@

#--------------------------------- Basic Rules --------------------------------#

clean:
	$(RM) $(OBJS)
	$(RM) -R $(PATH_OBJS)
	printf "$(RED)objs from $(NAME) removed\n$(NC)"

fclean: clean
	$(RM) $(NAME)
	printf "$(RED)$(NAME) removed\n$(NC)"

re: fclean all

#----------------------------------- Special ----------------------------------#

.PHONY: clean fclean re all debug
.SILENT:
